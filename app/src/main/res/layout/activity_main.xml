<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editNome"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="@string/nome"
        android:inputType="textPersonName" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="qual e o melhor ambiente da sua casa para estudar ?"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkQuarto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quarto" />

    <CheckBox
        android:id="@+id/checkCozinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cozinha" />

    <CheckBox
        android:id="@+id/checkGaragem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Garagem" />

    <CheckBox
        android:id="@+id/checkSala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sala" />

    <CheckBox
        android:id="@+id/checkBanheiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banheiro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexo" />

    <RadioGroup
        android:id="@+id/radioGroupSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/radioButtonF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feminino" />
    </RadioGroup>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="enviar"
        android:text="Enviar" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Limpar"
        android:text="Limpar" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="20sp" />

</LinearLayout>